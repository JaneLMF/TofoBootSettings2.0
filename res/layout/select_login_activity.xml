<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:id="@+id/main_rl"
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
        >
        <LinearLayout 
            android:id="@+id/topLocalInfor"
            android:layout_width="match_parent"
    		android:layout_height="30dp" 
    		android:orientation="horizontal"
    		android:layout_marginTop="10dp"
            ></LinearLayout>
        <RelativeLayout 
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
    		android:layout_height="83dp" 
    		android:layout_below="@id/topLocalInfor"
    		android:layout_marginTop="50dp"
    		android:layout_marginLeft="120dp"
            >
            <ImageView 
                android:id="@+id/leftIcon"
               android:layout_width="20dp"
    			android:layout_height="83dp" 
    			android:layout_marginRight="20dp"
    			android:src="@drawable/top_left_icon"
    			android:visibility="invisible"
                />
            <TextView 
                android:id="@+id/bigTitle"
                android:layout_width="200dp"
    			android:layout_height="50dp" 
    			android:textSize="@dimen/page_BigTitle_size"
    			android:layout_toRightOf="@id/leftIcon"
    			android:textColor="@color/common_color_white"
    			android:gravity="bottom"
    			android:text="@string/select_accout_bigTitle"
                />
             <TextView 
                android:id="@+id/littleTitle"
                android:layout_width="250dp"
    			android:layout_height="28dp" 
    			android:textSize="@dimen/page_littleTitle_size"
    			android:layout_below="@+id/bigTitle"
    			android:textColor="@color/page_LittleTitle"
    			android:text="@string/select_accout_littleTitle"
    			android:layout_alignLeft="@+id/bigTitle"
    			android:gravity="top"
                />
        </RelativeLayout>
      
	         <HorizontalScrollView
		       android:id="@+id/hsv"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:focusable="false"
		        android:layout_below="@id/pageTitle"
		        android:descendantFocusability="afterDescendants"
		        android:scrollbars="none"
		        android:visibility="gone"
			     >
			      <LinearLayout
			        android:id="@+id/layout_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			         >
   				 </LinearLayout>   
		         </HorizontalScrollView>
		        
	         <RelativeLayout 
	             android:id="@+id/login_ll"
	             android:layout_width="match_parent"
		         android:layout_height="400dp"
	             android:orientation="vertical"
	             android:layout_marginTop="15dp"
	             android:layout_below="@id/pageTitle"
	             android:gravity="center"
	             >
			     
	             <RelativeLayout
	                 android:id="@+id/login_content_ll" 
	                 android:layout_width="280dp"
		         	 android:layout_height="350dp"
	                 android:background="@drawable/login_focus_bg"
	                 android:focusable="true"
	                 android:gravity="center"
	                 android:visibility="visible"
	                 >
	                 
	                 <ImageView 
	                     android:id="@+id/no_login"
	                      android:layout_width="120dp"
		         		 android:layout_height="120dp"
		         		 android:layout_marginLeft="30dp"
		         		 android:src="@drawable/selected_qq_icon"
		         		 android:visibility="visible"
		         		 android:layout_marginTop="30dp"
	                     />   
	                  <TextView 
	                  android:id="@+id/qq_Text"
	                  android:layout_width="180dp"
		         	  android:layout_height="wrap_content"
		         	  android:gravity="center"
		         	  android:textColor="@color/common_color_white"
		         	  android:textSize="30sp"
		         	  android:layout_below="@id/no_login"
		         	  android:layout_marginTop="20dp"
	                  android:text="@string/select_accout_qq"
	                  android:textStyle="bold"
	                  android:visibility="visible" />
	                  <TextView 
	                  android:id="@+id/login_state"
	                  android:layout_width="180dp"
		         	  android:layout_height="wrap_content"
		         	  android:gravity="center"
		         	  android:textColor="#FFFFFF"
		         	  android:textSize="18sp"
		         	  android:layout_below="@id/qq_Text"
		         	  android:layout_marginTop="10dp"
	                  android:text="@string/logined_bigTitle"
	                  android:visibility="invisible"
	                 />
	             </RelativeLayout>
	             <RelativeLayout
	                 android:id="@+id/logined_content_ll" 
	                 android:layout_width="280dp"
		         	 android:layout_height="257dp"
	                 android:background="@drawable/login_default_bg"
	                 android:focusable="true"
	                 android:gravity="center"
	                 android:visibility="gone"
	                 android:layout_marginBottom="50dp"
	                 >
	                 <LinearLayout
	                     android:id="@+id/logined_ll" 
	                      android:layout_width="match_parent"
		         		 android:layout_height="match_parent"
		         		 android:orientation="vertical"
		         		 android:gravity="center_horizontal"
		         		 android:layout_marginTop="5dp"
	                     >
	                <ImageView 
	                    android:id="@+id/login_face"
	                    android:layout_width="85dp"
		         	    android:layout_height="85dp"
		         	    android:layout_marginTop="30dp"
	                    /> 
	                    <TextView 
	                      android:id="@+id/login_name"
	                      android:layout_width="300dp"
		         	      android:layout_height="30dp"
		         	      android:gravity="center"
		         	      android:textColor="@color/login_name_default"
		         	      android:textSize="14sp"
	                        />
	                    
	                    <TextView 
	                      android:id="@+id/logout_text"
	                      android:layout_width="200dp"
		         	      android:layout_height="40dp"
		         	      android:gravity="center"
		         	      android:textSize="22sp"
		         	      android:layout_marginTop="30dp"
		         	      android:textColor="@color/common_color_white"
		         	      android:text="@string/select_accout_logout"
	                        />
	                    </LinearLayout>
	                 
	             </RelativeLayout>
	         </RelativeLayout>
	         
	          <LinearLayout 
	            android:id="@+id/enterBox"
	            android:layout_width="200dp"
	    		android:layout_height="80dp"
	    		android:background="@null"
	    		android:gravity="center"
	    		android:layout_marginLeft="1000dp"
	    		android:layout_below="@id/login_ll"
	    		android:focusable="true"
	    		android:layout_marginTop="15dp"
	    		android:visibility="visible"
	            >
	        <TextView 
	            android:id="@+id/next_text"
	              	android:layout_width="match_parent"
	    			android:layout_height="80dp"
	    			android:textColor="#4c5c6a"
	    			android:textSize="30sp"
	    			android:gravity="center"
	    			android:text="@string/detect_network_next"
	            />

        </LinearLayout>
	         
	        <RelativeLayout 
             android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
             >
           <ImageView 
               android:id="@+id/iconTip"
             android:layout_width="20dp"
            android:layout_height="20dp"
               />
         <TextView 
             android:id="@+id/textTip"
             android:layout_width="300dp"
            android:layout_height="20dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#80FFFFFF"
            android:layout_toRightOf="@+id/iconTip"
            android:visibility="visible"
             />
         </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
