<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_ll"
    android:orientation="vertical" >
    <RelativeLayout 
                 android:layout_width="wrap_content"
    		 	android:layout_height="wrap_content"
                >
            <RelativeLayout 
                android:id="@+id/ll"
                android:layout_width="900dp"
    		 	android:layout_height="60dp"
    		 	android:orientation="horizontal" 
    		 	android:gravity="left|center_vertical"
    		 	android:background="#00000000"
                >
                <TextView
                    android:id="@+id/text" 
                    android:layout_width="wrap_content"
    		 		android:layout_height="60dp" 
    		 		android:gravity="left|center_vertical"
    		 		android:textColor="@color/common_color_grey"
    		 		android:textSize="@dimen/play_text_size"
    		 		android:layout_marginLeft="50dp"
    		 		android:layout_centerVertical="true"
                    />
                <LinearLayout 
                    android:layout_width="400dp"
    		 		android:layout_height="60dp" 
    		 		android:gravity="right|center_vertical"
    		 		android:orientation="horizontal"
    		 		android:layout_marginLeft="450dp"
                    >
                <ImageView 
                    android:id="@+id/pmbh_left"
                    android:layout_width="20dp"
    		 		android:layout_height="20dp" 
    		 		android:src="@drawable/add_arrow_left"
    		 		android:layout_marginRight="5dp"
                    />
                <TextView 
                    android:id="@+id/text_state"
                     android:layout_width="220dp"
    		 		android:layout_height="40dp"
    		 		android:gravity="center"
    		 		android:textColor="@color/common_color_grey"
    		 		android:textSize="22sp"
    		 		android:layout_marginRight="5dp"
                    />
                <ImageView 
                    android:id="@+id/pmbh_right"
                    android:layout_width="20dp"
    		 		android:layout_height="20dp" 
    		 		android:src="@drawable/icon_arrow_right"
    		 		android:layout_marginRight="5dp"
                    />
                
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/selected_ll"
               android:layout_width="900dp"
    		 	android:layout_height="60dp"
    		 	android:orientation="horizontal" 
    		 	android:gravity="left|center_vertical"
    		 	android:visibility="gone"
    		 	android:background="#00000000"
                >
                <TextView
                    android:id="@+id/text_selected" 
                    android:layout_width="wrap_content"
    		 		android:layout_height="50dp" 
    		 		android:gravity="left|center_vertical"
    		 		android:textColor="@color/common_color_white"
    		 		android:textSize="@dimen/comm_selected_text_size"
    		 		android:layout_marginLeft="45dp"
    		 		android:layout_centerVertical="true"
                    />
                <LinearLayout 
                    android:layout_width="400dp"
    		 		android:layout_height="60dp" 
    		 		android:orientation="horizontal"
    		 		android:gravity="right|center_vertical"
    		 		android:layout_marginLeft="450dp"
                    >
                 <ImageView 
                    android:id="@+id/pmbh_selected_left"
                    android:layout_width="25dp"
    		 		android:layout_height="25dp" 
    		 		android:src="@drawable/add_arrow_left"
    		 		android:layout_marginRight="5dp"
                    />
                
                <TextView 
                    android:id="@+id/text_selected_state"
                     android:layout_width="220dp"
    		 		android:layout_height="40dp"
    		 		android:gravity="center"
    		 		android:textColor="@color/common_color_blue"
    		 		android:textSize="22sp"
    		 		android:layout_marginRight="5dp"
                    />
                <ImageView 
                    android:id="@+id/pmbh_selected_right"
                    android:layout_width="25dp"
    		 		android:layout_height="25dp" 
    		 		android:src="@drawable/icon_arrow_right"
                    />
                </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>

</LinearLayout>
