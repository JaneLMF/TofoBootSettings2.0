<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
        >
        <LinearLayout 
            android:id="@+id/topLocalInfor"
            android:layout_width="match_parent"
    		android:layout_height="30dp" 
    		android:orientation="horizontal"
    		android:layout_marginTop="10dp"
            ></LinearLayout>
        <RelativeLayout 
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
    		android:layout_height="63dp" 
    		android:layout_below="@id/topLocalInfor"
    		android:layout_marginTop="50dp"
    		android:layout_marginLeft="120dp"
            >
            <ImageView 
                android:id="@+id/leftIcon"
             	android:layout_width="50dp"
    			android:layout_height="50dp" 
                />
            <TextView 
                android:id="@+id/bigTitle"
                android:layout_width="200dp"
    			android:layout_height="35dp" 
    			android:textSize="28sp"
    			android:layout_toRightOf="@id/leftIcon"
    			android:textColor="#FFFFFF"
                />
             <TextView 
                android:id="@+id/littleTitle"
                android:layout_width="200dp"
    			android:layout_height="28dp" 
    			android:textSize="16sp"
    			android:layout_below="@+id/bigTitle"
    			android:textColor="#80FFFFFF"
    			android:layout_alignLeft="@+id/bigTitle"
                />
        </RelativeLayout>
         <android.support.v4.view.ViewPager
            android:id="@+id/settingsViewPager"
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:layout_below="@id/pageTitle" />
         
         <RelativeLayout 
             android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@id/settingsViewPager"
            android:gravity="center"
             >
           <ImageView 
               android:id="@+id/iconTip"
             android:layout_width="20dp"
            android:layout_height="20dp"
               />
         <TextView 
             android:id="@+id/textTip"
             android:layout_width="300dp"
            android:layout_height="20dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#80FFFFFF"
            android:layout_toRightOf="@+id/iconTip"
             />
         </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
