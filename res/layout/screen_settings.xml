<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
        >
        <LinearLayout 
            android:id="@+id/topLocalInfor"
            android:layout_width="match_parent"
    		android:layout_height="30dp" 
    		android:orientation="horizontal"
    		android:layout_marginTop="10dp"
            >
            <include layout="@layout/local_infor"/>
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
    		android:layout_height="83dp" 
    		android:layout_below="@id/topLocalInfor"
    		android:layout_marginTop="50dp"
    		android:layout_marginLeft="120dp"
            >
            <ImageView 
                android:id="@+id/leftIcon"
             	android:layout_width="20dp"
    			android:layout_height="83dp" 
    			android:layout_marginRight="20dp"
    			android:src="@drawable/top_left_icon"
                />
            <TextView 
                android:id="@+id/bigTitle"
                android:layout_width="200dp"
    			android:layout_height="50dp" 
    			android:textSize="@dimen/page_BigTitle_size"
    			android:layout_toRightOf="@id/leftIcon"
    			android:textColor="@color/common_color_white"
    			android:text="@string/screen_setting_BigTitle"
                />
             <TextView 
                android:id="@+id/littleTitle"
                android:layout_width="200dp"
    			android:layout_height="28dp" 
    			android:textSize="@dimen/page_littleTitle_size"
    			android:layout_below="@+id/bigTitle"
    			android:textColor="@color/page_LittleTitle"
    			android:text="@string/screen_setting_littleTitle"
    			android:layout_alignLeft="@+id/bigTitle"
                />
        </RelativeLayout>
        
        <LinearLayout 
             android:id="@+id/ll"
             android:layout_width="800dp"
    		 android:layout_height="450dp" 
    		 android:layout_centerHorizontal="true"
    		 android:layout_below="@id/pageTitle"
    		 android:orientation="horizontal"
    		 android:gravity="bottom|center_horizontal"
    		 android:focusable="true"
            >
           
            <RelativeLayout 
                android:id="@+id/pmjz_rl"
                android:layout_width="200dp"
    		 	android:layout_height="270dp"
    		 	android:gravity="center"
    		 	android:background="@drawable/screen_onselected_background"
    		 	android:focusable="true"
                >
            <ImageView 
                android:id="@+id/pmjz_icon"
                android:layout_width="100dp"
    		 	android:layout_height="100dp"
    		 	android:src="@drawable/pmjz_icon"
    		 	android:layout_marginLeft="50dp"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="@string/screen_pmjz"
                android:layout_marginTop="30dp"
                android:layout_below="@id/pmjz_icon"
                android:textColor="@color/common_color_grey"
                android:textSize="22sp" 
                android:textStyle="bold"
                />

            </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="wrap_content"
    			 android:layout_height="match_parent"  
                android:orientation="vertical"
                android:gravity="bottom|center_horizontal"
                android:layout_marginLeft="50dp"
                >
            <ListView 
                 android:id="@+id/pmfbList"
                 android:layout_width="200dp"
    			 android:layout_height="160dp" 
    			 android:focusable="false" 
    			 android:background="#00000000"
    			 android:scrollbars="none"
                >
            </ListView>
                <LinearLayout 
                android:id="@+id/pmfb_ll"
                android:layout_width="200dp"
    		 	android:layout_height="270dp"
    		 	android:gravity="center"
    		 	android:background="@drawable/screen_onselected_background"
    		 	android:orientation="vertical"
    		 	android:focusable="true"
                >
            <TextView 
                android:id="@+id/pmfb_big"
                android:layout_width="200dp"
    		 	android:layout_height="50dp"
    		 	android:textSize="35sp"
    		 	android:gravity="center"
    		 	android:textColor="@color/common_color_white"
    		 	android:layout_marginTop="20dp"
                />
            <TextView 
                android:id="@+id/pmfb_little"
                android:layout_width="100dp"
    		 	android:layout_height="30dp"
    		 	android:textSize="23sp"
    		 	android:gravity="center"
    		 	android:textColor="@color/common_color_white"
                />
            <TextView 
                android:layout_width="200dp"
    		 	android:layout_height="40dp"
    		 	android:textColor="@color/common_color_grey"
    		 	android:text="@string/screen_resolution"
    		 	android:layout_marginTop="35dp"
    		 	android:gravity="center"
    		 	android:textSize="22sp"
    		 	 android:textStyle="bold"
                />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
       
    </RelativeLayout>

</FrameLayout>
