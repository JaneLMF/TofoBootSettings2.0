<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="@drawable/webchat_bg"
    >
    
	<TextView 
	    android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:text="@string/detecting_speed_text"
        android:gravity="center"
        android:layout_marginTop="60dp"
	    />
	<TextView 
	    android:id="@+id/Resolution"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F6ff"
        android:textSize="50sp"
        android:gravity="center"
        android:textStyle="bold"
        android:alpha="0.5"
	    />
    <TextView 
        android:id="@+id/speed"
	    android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#F6ff"
        android:textSize="21sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
	    />
    
    <Button 
        android:id="@+id/rebutton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/detecting_speed_redetect"
        android:gravity="center"
        android:textColor="@color/common_color_white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:background="@drawable/btn_focus"
        android:layout_marginTop="40dp"
        />
</LinearLayout>
