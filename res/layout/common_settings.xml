<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
        >
        <LinearLayout 
            android:id="@+id/topLocalInfor"
            android:layout_width="match_parent"
    		android:layout_height="30dp" 
    		android:orientation="horizontal"
    		android:layout_marginTop="10dp"
            >
            <include layout="@layout/local_infor"/>
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
    		android:layout_height="83dp" 
    		android:layout_below="@id/topLocalInfor"
    		android:layout_marginTop="50dp"
    		android:layout_marginLeft="120dp"
            >
            <ImageView 
                android:id="@+id/leftIcon"
             	android:layout_width="20dp"
    			android:layout_height="83dp" 
    			android:layout_marginRight="20dp"
    			android:src="@drawable/top_left_icon"
                />
            <TextView 
                android:id="@+id/bigTitle"
                android:layout_width="200dp"
    			android:layout_height="50dp" 
    			android:textSize="@dimen/page_BigTitle_size"
    			android:layout_toRightOf="@id/leftIcon"
    			android:textColor="@color/common_color_white"
    			android:text="@string/common_setting_BigTitle"
                />
             <TextView 
                android:id="@+id/littleTitle"
                android:layout_width="200dp"
    			android:layout_height="28dp" 
    			android:textSize="@dimen/page_littleTitle_size"
    			android:layout_below="@+id/bigTitle"
    			android:textColor="@color/page_LittleTitle"
    			android:text="@string/common_setting_LittleTitle"
    			android:layout_alignLeft="@+id/bigTitle"
                />
        </RelativeLayout>
        <!-- main -->
        <LinearLayout 
            android:id="@+id/menu_ll"
             android:layout_width="1000dp"
    		 android:layout_height="500dp" 
    		 android:gravity="center"
    		 android:layout_centerHorizontal="true"
    		 android:layout_below="@id/pageTitle"
    		 android:orientation="vertical"
    		 android:focusable="true"
    		 android:layout_marginTop="60dp"
    		 android:visibility="visible"
            >
            <ListView
                android:id="@+id/commonlist" 
                android:layout_width="900dp"
    		    android:layout_height="match_parent"
    		    android:listSelector="@drawable/wifilist_item_bg" 
    		    android:layout_marginLeft="40dp"
                ></ListView>
           
            
        </LinearLayout>
       <!-- weather,local -->
         <LinearLayout 
             android:id="@+id/weatherlocal_ll"
             android:layout_width="800dp"
    		 android:layout_height="500dp" 
    		 android:gravity="center"
    		 android:layout_centerHorizontal="true"
    		 android:layout_below="@id/pageTitle"
    		 android:orientation="vertical"
    		 android:focusable="true"
    		 android:layout_marginTop="30dp"
    		 android:visibility="gone"
            >
            <LinearLayout 
                android:layout_width="800dp"
    			android:layout_height="250dp"
    			android:orientation="horizontal" 
    			android:gravity="center"
                >
                <!-- left weather -->
                <LinearLayout 
                android:layout_width="400dp"
    			android:layout_height="250dp"
    			android:orientation="vertical" 
    			android:gravity="center"
                >
                <ImageView 
                    android:id="@+id/left_weather_icon"
                    android:layout_width="120dp"
    				android:layout_height="120dp" 
    				android:src="@drawable/weather_rain"
                    />
                <TextView 
                    android:id="@+id/left_weather_text"
                    android:layout_width="200dp"
    				android:layout_height="40dp"
    				android:textSize="28sp" 
    				android:gravity="center"
    				android:textColor="@color/common_color_white"
    				android:layout_marginTop="20dp"
                    />
                <TextView 
                    android:id="@+id/left_weather_date"
                    android:layout_width="200dp"
    				android:layout_height="30dp"
    				android:textSize="25sp" 
    				android:gravity="center"
    				android:textColor="@color/common_color_grey"
                    />
                </LinearLayout>
                 <!--  right weather -->
                <LinearLayout 
                android:layout_width="400dp"
    			android:layout_height="250dp"
    			android:orientation="vertical" 
    			android:gravity="center"
                >
                 <ImageView 
                    android:id="@+id/right_weather_icon"
                    android:layout_width="120dp"
    				android:layout_height="120dp" 
    				android:src="@drawable/weather_sunny"
                    />
                <TextView 
                    android:id="@+id/right_weather_text"
                    android:layout_width="200dp"
    				android:layout_height="40dp"
    				android:textSize="28sp" 
    				android:textColor="@color/common_color_white"
    				android:gravity="center"
    				android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/right_weather_date"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/common_color_grey"
                    android:textSize="25sp" />

                </LinearLayout>
            </LinearLayout>
             <LinearLayout 
                android:layout_width="800dp"
    			android:layout_height="250dp"
    			android:orientation="horizontal" 
    			android:layout_marginTop="20dp"
    			android:gravity="center_vertical"
                >
                <RelativeLayout 
                    android:id="@+id/Country_rl"
                   android:layout_width="200dp"
    				android:layout_height="wrap_content"
    				android:gravity="center" 
    				android:layout_marginLeft="50dp"
    				android:focusable="true"
                    >
                
                <TextView 
                    android:id="@+id/Country_text"
                    android:layout_width="150dp"
    				android:layout_height="70dp"
    				android:textColor="@color/common_color_grey"
    				android:textSize="30sp"
    				android:gravity="center"
    				android:layout_marginTop="10dp"
    				android:visibility="gone"
                    />
                <ListView 
                     android:id="@+id/AreaList_Country"
                     android:layout_width="150dp"
    				 android:layout_height="180dp"
    				 android:nextFocusRight="@+id/Province_rl"
    				 android:listSelector="#00000000" 
    				 android:layout_marginTop="20dp"
                     />
                 <TextView 
                      android:id="@+id/Country_bg"
                      android:layout_width="150dp"
    				  android:layout_height="70dp"
    				  android:layout_marginTop="70dp"
    				  android:background="@drawable/wifilist_item_bg"
    				  android:visibility="gone"
                     />
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/Province_rl"
                   android:layout_width="200dp"
    				android:layout_height="wrap_content"
    				android:gravity="center" 
    				android:focusable="true"
                    >
               
                 <TextView
                      android:id="@+id/Province_text" 
                     android:layout_width="150dp"
    				android:layout_height="70dp"
    				android:textColor="@color/common_color_grey"
    				android:textSize="30sp"
    				android:gravity="center"
    				android:layout_marginTop="10dp"
                    />
                 <ListView 
                    android:id="@+id/AreaList_Province"
                     android:layout_width="150dp"
    				 android:layout_height="180dp"
    				 android:nextFocusRight="@+id/City_rl"
    				 android:nextFocusLeft="@+id/Country_rl"
    				 android:visibility="gone"
    				android:listSelector="#00000000" 
    				android:layout_marginTop="20dp"
    				android:scrollbars="none"
                     />
                  <TextView 
                      android:id="@+id/Province_bg"
                      android:layout_width="150dp"
    				  android:layout_height="70dp"
    				  android:layout_marginTop="70dp"
    				  android:background="@drawable/wifilist_item_bg"
    				  android:visibility="gone"
                     />
                </RelativeLayout>
                <RelativeLayout 
                     android:id="@+id/City_rl"
                   android:layout_width="200dp"
    				android:layout_height="wrap_content"
    				android:gravity="center" 
    				android:layout_marginLeft="20dp"
    				android:focusable="true"
                    >
                    
                 <TextView 
                      android:id="@+id/City_text"
                     android:layout_width="150dp"
    				android:layout_height="70dp"
    				android:textColor="@color/common_color_grey"
    				android:textSize="30sp"
    				android:gravity="center"
    				android:layout_marginTop="10dp"
                    />
                 <ListView 
                     android:id="@+id/AreaList_City"
                     android:layout_width="150dp"
    				 android:layout_height="180dp"
    				 android:visibility="gone"
    				 android:nextFocusLeft="@+id/Province_rl"
    				  android:listSelector="#00000000" 
    				  android:layout_marginTop="20dp"
    				  android:scrollbars="none"
                     />
                 
                 <TextView 
                      android:id="@+id/City_bg"
                      android:layout_width="150dp"
    				  android:layout_height="70dp"
    				  android:layout_marginTop="10dp"
    				  android:background="@drawable/wifilist_item_bg"
    				  android:visibility="gone"
                     />
                 <TextView 
                      android:id="@+id/City_bg_list"
                      android:layout_width="150dp"
    				  android:layout_height="70dp"
    				  android:layout_marginTop="70dp"
    				  android:background="@drawable/wifilist_item_bg"
    				  android:visibility="gone"
                     />
                 </RelativeLayout>
                </LinearLayout>
           </LinearLayout>
        
    </RelativeLayout>

</FrameLayout>
